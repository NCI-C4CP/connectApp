{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "firebase": "readonly",
    "firebaseui": "readonly",
    "google":"readonly",
    "workbox": "readonly",
    "importScripts": "readonly",
    "localforage": "readonly",
    "pdfjsLib": "readonly",
    "PDFLib": "readonly",
    "download": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "semi": "warn",
    "semi-spacing":"warn",
    "semi-style":"warn",
    "camelcase":"warn",
    "eqeqeq":"warn",
    "no-else-return":"warn",
    "no-eq-null":"warn",
    "no-var":"warn",
    "require-await":"warn",
    "eol-last":"warn"
  }
}